<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTextureLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/texture_left"
        app:layout_constraintBottom_toTopOf="@id/guideLineLeftTexture"
        app:layout_constraintDimensionRatio="1:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgElipse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ellips"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/guideLineElipseBottomTexture"
        app:layout_constraintEnd_toStartOf="@+id/guideLineRightTexture"
        app:layout_constraintStart_toStartOf="@+id/guideLineElipseLeftTexture"
        app:layout_constraintTop_toTopOf="@+id/guideLineElipseTopTexture" />

    <TextView
        android:id="@+id/tvLetsRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/h4"
        android:layout_marginTop="@dimen/tvRightAddressMargin"
        app:layout_constraintTop_toTopOf="@id/guideLineLeftTexture"
        app:layout_constraintStart_toStartOf="@id/imgElipse"
        app:layout_constraintEnd_toEndOf="@id/imgElipse"
        app:layout_constraintBottom_toBottomOf="@id/imgElipse"
        android:text="@string/rightAddress"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/h2"
        app:layout_constraintStart_toStartOf="@id/tvLetsRegister"
        app:layout_constraintEnd_toEndOf="@id/tvLetsRegister"
        app:layout_constraintTop_toBottomOf="@id/tvLetsRegister"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/quality"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/texture_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideLineLeftTexture"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/smallButtonWidth"
        android:layout_height="@dimen/smallButtonHeight"
        style="@style/blueButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/tvHaveAccount"
        app:layout_constraintStart_toStartOf="@id/tvHaveAccount"
        app:layout_constraintEnd_toEndOf="@id/tvHaveAccount"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineLeftTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineElipseTopTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineElipseBottomTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineElipseLeftTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineRightTexture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>